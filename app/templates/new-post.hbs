<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input id="title" class="form-control" value=title}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input id="author" class="form-control" value=author}}
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    {{input id="body" class="form-control" value=body}}
  </div>
  <button class="btn btn-default" {{action 'submit'}}>Submit</button>

</form>
